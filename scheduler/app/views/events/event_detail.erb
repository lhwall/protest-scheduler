<h3><%=@event.name%></h3>
<p><%=@event.location%></p>
<p><%=@event.date%>,<%= @event.time%></p>
<p><%=@event.description%></p><%binding.pry%>
<%if @event.category_id %><p><strong><%=@event.category.name  %></strong></p><%end%>


<% if @event.user_id == session[:user_id] %>
<form class="" action="/events/<%event.id%>/update" method="post">
  <input id=hidden type="hidden" name="_method" value="patch">
  <input type="submit" name="" value="Edit Event">
</form>
<form class="" action="/events/<%event.id%>/delete" method="post">
  <input id=hidden type="hidden" name="_method" value="delete">
  <input type="submit" name="" value="Delete Event">
</form>
<br><a href="/user_index">Back to Your Events</a>
<%end%>
<br><a href="/">Back to Index</a>